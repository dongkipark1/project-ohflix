            <script>
                document.getElementById("next-time-btn").addEventListener("click", function (event) {
                    // 버튼의 기본 동작을 막음 (예: 폼 제출 등)
                    event.preventDefault();
                    // section 요소에 'hide-next-time' 클래스를 추가하여 애니메이션을 적용
                    document.querySelector("section").classList.add("hide2");
                    // 0.5초 후에 지정된 URL로 이동 (여기서는 홈페이지)
                    setTimeout(function () {
                        window.location.href = "/api/main-page";
                        document.querySelector("section").classList.remove("hide2")
                    }, 500);
                });
            </script>
